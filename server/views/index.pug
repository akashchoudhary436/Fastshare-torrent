extends layout

block body
  main(style='background: #f5f5f5; padding: 20px; font-family: Arial, sans-serif;')
   
    
      h1#logHeading(style='display: none;')

      .speed
  

      .log
  

      section(style='background: white; border-radius: 8px; padding: 20px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); margin-bottom: 20px;')
        h1(style='font-size: 24px; color: #333; margin-bottom: 10px;') Start sharing
        p(style='font-size: 16px; color: #666; margin-bottom: 15px;')
          | Drag-and-drop files to begin seeding. Or choose a file:
          | #{ ' ' }
          input(type='file', name='upload', multiple, style='border: 1px solid #ccc; padding: 10px; border-radius: 4px;')

      section(style='background: white; border-radius: 8px; padding: 20px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);')
        h1(style='font-size: 24px; color: #333; margin-bottom: 10px;') Start downloading
        form
          label(for='torrentId', style='font-size: 16px; color: #333; margin-bottom: 10px; display: block;') Download from a magnet link or info hash
          input(name='torrentId', placeholder='magnet:', required, style='border: 1px solid #ccc; padding: 10px; border-radius: 4px; width: 100%; box-sizing: border-box;')
          button(type='submit', style='background-color: #007BFF; color: white; border: none; padding: 10px 20px; border-radius: 4px; cursor: pointer; font-size: 16px; margin-top: 10px;') Download

      footer(style='text-align: center; padding: 10px; font-size: 14px; color: #666;')
